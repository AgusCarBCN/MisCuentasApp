<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".CalculatorFragment"
    >

    <TextView
        android:id="@+id/tv_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="2x10"
        android:gravity="center_vertical|end"
        android:background="?android:colorSecondary"
        android:textSize="@dimen/common"/>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:colorSecondary"
        android:gravity="center_vertical|end"
        android:padding="5dp"
        android:text="10.0"
        android:textSize="@dimen/common"
        tools:text="10.0" />

    <!-- Contenido del primer LinearLayout -->
    <LinearLayout
        android:id="@+id/ly_firstrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">
            <Button
                android:id="@+id/btn_1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/style_botton"
                android:text="@string/calc_1"
                android:textSize="@dimen/common" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">

            <Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/style_botton"
                android:text="@string/calc_btn_2"
                android:textSize="@dimen/common" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">
            <Button
                android:id="@+id/btn_3"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="@string/calc_btn_3"
                android:textSize="@dimen/common"
                android:background="@drawable/style_botton"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">
            <Button
                android:id="@+id/btn_4"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/style_botton"
                android:text="@string/calc_4"
                android:textSize="@dimen/common" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">

            <Button
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/style_botton"
                android:text="@string/calc_btn_5"
                android:textSize="@dimen/common" />
        </androidx.cardview.widget.CardView>




    </LinearLayout>
    <!-- Contenido del segundo LinearLayout -->
    <LinearLayout
        android:id="@+id/ly_secondrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">

            <Button
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/style_botton"
                android:text="@string/calc_btn_6"
                android:textSize="@dimen/common" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">
            <Button
                android:id="@+id/btn_7"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/style_botton"
                android:text="@string/calc_7"
                android:textSize="@dimen/common" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">

            <Button
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/style_botton"
                android:text="@string/calc_btn_8"
                android:textSize="@dimen/common" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">
            <Button
                android:id="@+id/btn_9"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="@string/calc_btn_9"
                android:textSize="@dimen/common"
                android:background="@drawable/style_botton"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">

            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/style_botton"
                android:text="@string/calc_btn_0"
                android:textSize="@dimen/common" />
        </androidx.cardview.widget.CardView>





    </LinearLayout>

    <!-- Contenido del cuarto LinearLayout -->
    <LinearLayout
        android:id="@+id/ly_fourthrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">
            <Button
                android:id="@+id/btn_plus"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="@string/calc_btn_plus"
                android:textSize="@dimen/common"
                android:background="@drawable/style_botton"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">
            <Button
                android:id="@+id/btn_minus"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="@string/calc_btn_minus"
                android:textSize="@dimen/common"
                android:background="@drawable/style_botton"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">
            <Button
                android:id="@+id/btn_times"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="@string/calc_btn_times"
                android:textSize="@dimen/common"
                android:background="@drawable/style_botton"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">

            <Button
                android:id="@+id/btn_div"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="@string/calc_btn_div"
                android:textSize="@dimen/common"
                android:background="@drawable/style_botton" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">

            <Button
                android:id="@+id/btnporc"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="@string/calc_btn_porce"
                android:textSize="@dimen/common"
                android:background="@drawable/style_botton" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <!-- Contenido del quinto LinearLayout -->
    <LinearLayout
        android:id="@+id/ly_fithrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            >

            <Button
                android:id="@+id/btn_clear"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/style_botton"
                android:textColor="@color/red"
                android:text="@string/calc_C"
                android:textSize="@dimen/common" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">

            <Button
                android:id="@+id/btnparen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/style_botton"
                android:text="@string/calc_btn_paren"
                android:textSize="@dimen/common" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">
            <Button
                android:id="@+id/btn_sign"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/style_botton"
                android:text="@string/calc_sign"
                android:textSize="@dimen/common" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">
            <Button
                android:id="@+id/btn_coma"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="@string/calc_btn_coma"
                android:textSize="@dimen/common"
                android:background="@drawable/style_botton"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25">
            <Button
                android:id="@+id/btn_equal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="@string/calc_btn_equal"
                android:textSize="@dimen/common"
                android:background="@drawable/style_botton"/>
        </androidx.cardview.widget.CardView>





    </LinearLayout>
</LinearLayout>
