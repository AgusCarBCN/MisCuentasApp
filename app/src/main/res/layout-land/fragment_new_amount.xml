<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="vertical"
    android:background="?android:colorPrimary"
    tools:context=".NewAmountFragment">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/et_descripcion">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_descripcion"
                style="@style/InputFieldLarge"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="@string/amount_text"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/et_importe">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_importe"
            style="@style/InputFieldLarge"
            android:hint="@string/amount"
            android:gravity="center"
            android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tvcuentanewamount"
            style="@style/InputFieldLargeCenter"
            android:hint="@string/select_account"
            android:background="@drawable/style_editetx"
            android:textAlignment="center"
            android:textSize="@dimen/extracommon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal|top"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_nuevoingreso"
                style="@style/ButtonStyle"
                android:layout_width="145dp"
                android:layout_marginEnd="15dp"
                android:text="@string/incomes" />

            <Button
                android:id="@+id/btn_nuevogasto"
                style="@style/ButtonStyle"
                android:layout_width="145dp"
                android:layout_marginStart="15dp"
                android:text="@string/bills"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
