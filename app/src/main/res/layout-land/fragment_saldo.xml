<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorPrimary"
    tools:context=".SaldoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/your_accounts"
            android:textAlignment="center"
            android:textColor="?android:textColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cuenta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_box_cuenta"
                android:gravity="center"
                android:text="@string/account"
                android:textAlignment="center"
                android:textColor="?android:textColor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_saldo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_box_saldo"
                android:gravity="center"
                android:text="@string/balance"
                android:textAlignment="center"
                android:textColor="?android:textColor"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cuenta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_box_cuenta"
                android:gravity="center"
                android:text="@string/account"
                android:textAlignment="center"
                android:textColor="?android:textColor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_saldo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_box_saldo"
                android:gravity="center"
                android:text="@string/balance"
                android:textAlignment="center"
                android:textColor="?android:textColor"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>