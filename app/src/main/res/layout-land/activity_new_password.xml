<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorPrimaryDark"
    tools:context=".NewPasswordActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:colorPrimaryDark"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ly_logo2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:previewImage"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagelogo"
                android:layout_width="230dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="50dp"
                android:background="?android:previewImage"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/logo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_newpass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="?android:colorPrimary"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_dniuser"
                android:layout_width="320dp"
                android:layout_height="@dimen/box"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/style_editetx"
                android:gravity="center"
                android:hint="@string/step1"
                android:inputType="text"
                android:maxLength="10" />

            <Button
                android:id="@+id/confirmdni"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/style_botton"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textColor="?android:textColor"
                android:textSize="@dimen/botton"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_newpassword"
                android:layout_width="320dp"
                android:layout_height="@dimen/box"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/style_editetx"
                android:gravity="center"
                android:hint="@string/step2"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/et_repeatpassword"
                android:layout_width="320dp"
                android:layout_height="@dimen/box"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/style_editetx"
                android:gravity="center"
                android:hint="@string/hintrepeatpass"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/confirmnewpass"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/style_botton"
                android:text="@string/confirm"
                android:textAllCaps="false"
                android:textColor="?android:textColor"
                android:textSize="@dimen/botton"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>