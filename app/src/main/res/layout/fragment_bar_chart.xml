<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorPrimary"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="?android:colorSecondary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="?android:colorPrimaryDark"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/tv_dialogtitleaccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="35dp"
                    android:gravity="center"
                    android:text="@string/select_account"
                    android:textSize="@dimen/common"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvaccount"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/box"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/style_editetx"
                    android:textAlignment="center"
                    android:textSize="@dimen/extracommon" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dialogtitleeyear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="35dp"
                    android:gravity="center"
                    android:text="@string/select_year"
                    android:textSize="@dimen/common"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvyear"
                    android:layout_width="150dp"
                    android:layout_height="@dimen/box"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="@dimen/extracommon"
                    android:textAlignment="center"
                    android:background="@drawable/style_editetx" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>









