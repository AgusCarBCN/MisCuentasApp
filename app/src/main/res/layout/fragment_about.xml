<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?android:colorPrimary">


        <TextView
            android:id="@+id/tvaboutdevname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding10"
            android:layout_marginEnd="@dimen/padding10"
            android:layout_marginRight="@dimen/padding10"
            android:layout_marginStart="@dimen/padding10"
            android:textSize="@dimen/extracommon"
            android:textStyle="bold"
            android:text="@string/developer"  />
        <TextView
            android:id="@+id/tvaboutatributions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/extracommon"
            android:layout_marginTop="@dimen/padding10"
            android:layout_marginEnd="@dimen/padding10"
            android:layout_marginRight="@dimen/padding10"
            android:layout_marginStart="@dimen/padding10"
            android:textStyle="bold"
            android:text="@string/atributions"  />
        <LinearLayout
            android:id="@+id/attributionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/padding10"
            android:layout_marginEnd="@dimen/padding10"
            android:layout_marginRight="@dimen/padding10"
            android:layout_marginStart="@dimen/padding10"
            android:textSize="@dimen/extracommon"
            android:layout_marginLeft="@dimen/padding10">
        </LinearLayout>



    </LinearLayout>
</FrameLayout>