<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?android:colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:colorPrimaryDark"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ly_logo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?android:previewImage"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagelogo"
                    android:layout_width="230dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="50dp"
                    android:background="?android:previewImage"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/contabilidad" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_newpass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="?android:colorPrimary"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/intronewpass"
                    android:textAlignment="center"
                    android:textColor="?android:textColor"
                    android:textSize="@dimen/common"
                    android:textStyle="bold" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_userdni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <EditText
                    android:id="@+id/et_dniuser"
                    android:layout_width="320dp"
                    android:layout_height="@dimen/box"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/style_dinamiceditext"
                    android:gravity="center"
                    android:hint="@string/step1"
                    android:inputType="text"
                    android:maxLength="10" />
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/confirmdni"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/style_button"
                    android:text="@string/confirm"
                    android:textAllCaps="false"
                    android:textColor="?android:textColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_newpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <EditText
                    android:id="@+id/et_newpassword"
                    android:layout_width="320dp"
                    android:layout_height="@dimen/box"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/style_dinamiceditext"
                    android:gravity="center"
                    android:hint="@string/step2"
                    android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_newpasswordrepeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <EditText
                    android:id="@+id/et_repeatpassword"
                    android:layout_width="320dp"
                    android:layout_height="@dimen/box"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/style_dinamiceditext"
                    android:gravity="center"
                    android:hint="@string/hintrepeatpass"
                    android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/confirmnewpass"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/style_button"
                    android:text="@string/confirm"
                    android:textAllCaps="false"
                    android:textColor="?android:textColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/backtoLogin"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/style_button"
                    android:text="@string/backbutton"
                    android:textAllCaps="false"
                    android:textColor="?android:textColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>