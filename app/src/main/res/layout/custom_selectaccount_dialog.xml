<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="?android:colorPrimary"
    android:layout_marginHorizontal="@dimen/padding10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_dialogtitleaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding10"
            android:layout_marginBottom="@dimen/padding10"
            android:gravity="center"
            android:textSize="@dimen/large"
            android:textStyle="bold"
            android:text="@string/select_account"/>

        <NumberPicker
            android:id="@+id/accountpicker"
            android:layout_height="150dp"
            android:layout_width="wrap_content"
            style="@style/LargeNumberPicker"
            android:inputType="number"
            android:layout_marginTop="@dimen/padding10"
            android:autofillHints="name"
            android:textSize="18sp"
            android:hint="@string/select_account"
            android:layout_marginBottom="20dp"
            />
        <Button
            android:id="@+id/btn_confirmaccount"
            style="@style/ButtonLarge"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="@string/confirm" />

    </LinearLayout>

</androidx.cardview.widget.CardView>