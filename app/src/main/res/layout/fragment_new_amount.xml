<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorPrimary"
    tools:context=".NewAmountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_descripcion"
            style="@style/InputFieldLarge"
            android:hint="@string/amount_text"
            android:gravity="center"
            android:inputType="textCapWords|textAutoComplete" />

        <EditText
            android:id="@+id/et_importe"
            style="@style/InputFieldLarge"
            android:hint="@string/amount"
            android:gravity="center"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/sp_cuentas"
            style="@style/InputFieldLargeCenter"
            android:gravity="center"
            android:textAlignment="center"
            android:theme="@style/CustomSpinner" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_nuevoingreso"
                style="@style/ButtonStyle"
                android:layout_marginRight="20dp"
                android:text="@string/incomes" />

            <Button
                android:id="@+id/btn_nuevogasto"
                style="@style/ButtonStyle"
                android:layout_marginLeft="20dp"
                android:text="@string/bills" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>