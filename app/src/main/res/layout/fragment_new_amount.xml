<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".NewAmountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:gravity="start|left"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_descripcion"
            android:layout_width="360dp"
            android:layout_height="@dimen/box"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/style_editetx"
            android:ems="10"
            android:hint="@string/amount_text"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_text_user"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/et_importe"
            android:layout_width="360dp"
            android:layout_height="@dimen/box"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/style_editetx"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/amount"
            android:inputType="numberDecimal"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/sp_cuentas"
            android:layout_width="360dp"
            android:layout_height="@dimen/box"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/style_editetx"
            android:gravity="center|center_vertical"
            android:textAlignment="center"
            android:theme="@style/CustomSpinner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="20dp"
            android:gravity="start|center_horizontal|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_nuevoingreso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/style_botton"
                android:fontFamily="sans-serif"
                android:text="@string/incomes"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/botton"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.739"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_password"
                app:rippleColor="#FFEB3B" />

            <Button
                android:id="@+id/btn_nuevogasto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="@drawable/style_botton"
                android:fontFamily="sans-serif"
                android:text="@string/bills"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/botton"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.739"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_password"
                app:rippleColor="#FFEB3B" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>