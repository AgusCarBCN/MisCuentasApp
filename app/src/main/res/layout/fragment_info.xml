<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment"
    android:background="?android:colorPrimary">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding10"
            android:layout_marginBottom="50dp"
            android:text="@string/info"
            android:textSize="@dimen/wellcome"
            android:textStyle="bold" />

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/infoMainLayout"
           >
            <ImageView
                android:id="@+id/imgid"
                style="@style/infoimageView"
                app:srcCompat="@drawable/login_24" />
            <LinearLayout
                style="@style/infoSecondaryLayout"
               >
                <TextView
                    android:text="@string/id"
                    style="@style/textViewHead"
                     />

                <LinearLayout
                    style="@style/infoTerciaryLayout"
                    >

                    <EditText
                        android:id="@+id/etdni"
                        style="@style/editText"
                        />

                    <ImageView
                        android:id="@+id/pencilid"
                        style="@style/imgPencil"
                        />
                </LinearLayout>


            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>


    </LinearLayout>

</FrameLayout>