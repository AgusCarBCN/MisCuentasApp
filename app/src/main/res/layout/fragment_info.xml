<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment"
    android:background="?android:colorPrimary">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorPrimary"
        android:orientation="vertical"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/info"
            android:layout_marginBottom="40dp"
            android:textSize="@dimen/head"
            android:textStyle="bold" />

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/infoMainLayout"
           >
            <ImageView
                android:id="@+id/imgid"
                style="@style/infoimageView"
                app:srcCompat="@drawable/login_24" />

            <TextView android:id="@+id/etdni"
              style="@style/infoTextView"  />


        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/infoMainLayout"
            >
            <ImageView
                android:id="@+id/imgname"
                style="@style/infoimageView"
                app:srcCompat="@drawable/person" />

            <TextView android:id="@+id/etname"
                style="@style/infoTextView" />


        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/infoMainLayout"
            >
            <ImageView
                android:id="@+id/imgemail"
                style="@style/infoimageView"
                app:srcCompat="@drawable/email_24" />

            <TextView android:id="@+id/etemail"
                style="@style/infoTextView" />


        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/infoMainLayout"
            >
            <ImageView
                android:id="@+id/imgaddress"
                style="@style/infoimageView"
                app:srcCompat="@drawable/location_on_24" />

            <TextView android:id="@+id/etaddress"
                style="@style/infoTextView"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/infoMainLayout"
            >
            <ImageView
                android:id="@+id/imgcity"
                style="@style/infoimageView"
                app:srcCompat="@drawable/location_city_24" />

            <TextView android:id="@+id/etcity"
                style="@style/infoTextView"  />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/infoMainLayout"
            >
            <ImageView
                android:id="@+id/imgpass"
                style="@style/infoimageView"
                app:srcCompat="@drawable/password" />

            <TextView android:id="@+id/etpass"
                style="@style/infoTextView"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>

</FrameLayout>