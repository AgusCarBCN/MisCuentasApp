<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createaccounts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorPrimary"
    tools:context=".CreateAccountsActivity">
        <TextView
            android:id="@+id/tv_createaccountstitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/createaccounts"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/infocreateaccounts"
            android:textSize="@dimen/common"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/til_name_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_createaccountstitle" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_name_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:labelFor="@+id/et_nameaccount"
            app:layout_constraintBottom_toTopOf="@+id/til_balanceaccount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_nameaccount"
                    style="@style/InputFieldLarge"

                    android:gravity="center"
                    android:hint="@string/accountname"
                    android:importantForAutofill="no"
                    android:inputType="textCapWords|textAutoComplete" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_balanceaccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:labelFor="@+id/et_balance"
            app:layout_constraintBottom_toTopOf="@+id/btn_addaccount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_name_account">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_balance"
                    style="@style/InputFieldLarge"
                    android:gravity="center"
                    android:hint="@string/balance"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btn_addaccount"
            style="@style/ButtonLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="16dp"
            android:text="@string/add_an_account"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_balanceaccount" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:labelFor="@+id/sp_choosecurreny"
            android:text="@string/selectCurrency"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/sp_choosecurreny"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_addaccount" />

        <Spinner
            android:id="@+id/sp_choosecurreny"
            style="@style/InputFieldLarge"
            android:layout_width="0dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="20dp"
            android:dropDownWidth="wrap_content"
            android:spinnerMode="dropdown"
            android:textSize="20sp"
            android:theme="@style/CustomSpinner"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/btn_tologin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:visibility="visible" />
        <Button
            android:id="@+id/btn_tologin"
            style="@style/ButtonLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="10dp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:contentDescription="@string/gotologin"
            android:text="@string/login"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_backtoCreateProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sp_choosecurreny" />
        <Button
            android:id="@+id/btn_backtoCreateProfile"
            style="@style/ButtonLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="150dp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:text="@string/backbutton"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_tologin" />
</androidx.constraintlayout.widget.ConstraintLayout>

