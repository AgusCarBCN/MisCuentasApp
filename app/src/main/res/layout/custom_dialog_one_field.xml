<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="?android:colorPrimary"
    android:layout_marginHorizontal="@dimen/padding10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_dialogtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding10"
            android:layout_marginBottom="@dimen/padding10"
            android:gravity="center"
            android:textSize="@dimen/large"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_dialoginfo"
            style="@style/InputFieldLarge"
            android:inputType="text"
            android:layout_marginTop="@dimen/padding10"
            android:autofillHints="name"
            android:hint="@string/newfield"
            android:layout_marginBottom="20dp"
             />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/padding10">
            <Button
                android:id="@+id/btn_dialogconfirm"
                style="@style/ButtonDialog"
                android:layout_marginEnd="30dp"
                android:text="@string/confirm" />
            <Button
                android:id="@+id/btn_dialogcancel"
                style="@style/ButtonDialog"
                android:layout_marginStart="30dp"
                android:text="@string/cancel" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>

</androidx.cardview.widget.CardView>