<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorPrimary"
    tools:context=".NotificationsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="start|center_horizontal"
        android:layout_margin="@dimen/padding10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_tittlenotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Notificaciones"
            android:textAlignment="center"
            android:textColor="?android:textColor"
            android:textSize="@dimen/head"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchweek"
                android:layout_width="360dp"
                android:layout_height="@dimen/box"
                android:layout_margin="8dp"
                android:textSize="@dimen/extracommon"
                android:buttonTint="?android:colorPrimary"
                android:padding="@dimen/padding10"
                android:text="notificaciones de ingresos/gastos semanales" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchmonth"
                android:layout_width="360dp"
                android:layout_height="@dimen/box"
                android:layout_margin="8dp"
                android:buttonTint="?android:colorPrimary"
                android:textSize="@dimen/extracommon"
                android:padding="@dimen/padding10"
                android:text="notificaciones de ingresos/gastos mensuales" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchalertlimit"
                android:layout_width="360dp"
                android:layout_height="@dimen/box"
                android:layout_margin="8dp"
                android:textSize="@dimen/extracommon"
                android:buttonTint="?android:colorPrimary"
                android:padding="@dimen/padding10"
                android:text="Alerta de limite de gasto"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchalertincome"
                android:layout_width="360dp"
                android:layout_height="@dimen/box"
                android:textSize="@dimen/extracommon"
                android:layout_margin="8dp"
                android:buttonTint="?android:colorPrimary"
                android:padding="@dimen/padding10"
                android:text="Recordatorio de ingresos"/>
        </LinearLayout>


    </LinearLayout>


</FrameLayout>