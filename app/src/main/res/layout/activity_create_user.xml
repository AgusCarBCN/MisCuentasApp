<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorPrimaryDark"
    android:gravity="center"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".CreateUserActivity">

    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_your_account"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/head"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/box"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/style_editetx"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName|textCapWords"
        android:textAlignment="viewStart"
        android:textColor="#333333"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_userdni"
        android:layout_width="match_parent"
        android:layout_height="@dimen/box"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/style_editetx"
        android:ems="10"
        android:hint="@string/id"
        android:inputType="text"
        android:maxLength="10"
        android:textColor="#333333"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_useraddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/box"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/style_editetx"
        android:ems="10"
        android:hint="@string/address"
        android:inputType="textCapWords"
        android:textColor="#333333"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_usercity"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/box"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/style_editetx"
            android:ems="10"
            android:hint="@string/city"
            android:inputType="textCapWords"
            android:textColor="#333333"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_userzip"
            android:layout_width="200dp"
            android:layout_height="@dimen/box"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="3"
            android:background="@drawable/style_editetx"
            android:ems="10"
            android:hint="@string/zipcode"
            android:maxLength="6"
            android:inputType="textPostalAddress"
            android:textColor="#333333"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_useremail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/box"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/style_editetx"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="#333333"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/password"
        android:textAlignment="center"
        android:textColor="?android:textColor"
        android:textSize="@dimen/head"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_userpass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/box"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/style_editetx"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:text="@string/password"
        android:textColor="#333333"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_cuentas4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/accounts"
        android:textAlignment="center"
        android:textColor="?android:textColor"
        android:textSize="@dimen/head"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_useraccmain"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/box"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/style_editetx"
            android:ems="10"
            android:hint="@string/main_account"
            android:inputType="text"
            android:textColor="#333333"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_amountaccmain"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/box"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="5"
            android:background="@drawable/style_editetx"
            android:ems="10"
            android:hint="@string/balance"
            android:inputType="numberDecimal"
            android:textColor="#333333"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_useraccsecond"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/box"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/style_editetx"
            android:ems="10"
            android:hint="@string/second_account"
            android:inputType="text"
            android:textColor="#333333"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_secondccamount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/box"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="5"
            android:background="@drawable/style_editetx"
            android:ems="10"
            android:hint="@string/balance"
            android:inputType="numberDecimal"
            android:textColor="#333333"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_confirmuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="25dp"
            android:layout_weight="1"
            android:background="@drawable/style_botton"
            android:onClick="confirmCreateUser"
            android:text="@string/confirm"
            android:textAllCaps="false"
            android:textColor="?android:textColor"
            android:textSize="@dimen/botton"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_canceluser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/style_botton"
            android:onClick="cancelCreateUser"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="?android:textColor"
            android:textSize="@dimen/botton"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>