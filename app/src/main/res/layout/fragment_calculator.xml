<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".CalculatorFragment">

    <TextView
        android:id="@+id/tv_operation"
        style="@style/TextViewCalc"
        android:textSize="@dimen/head" />

    <TextView
        android:id="@+id/tv_result"
        style="@style/TextViewCalc"
        android:textSize="@dimen/calcbutton" />

    <!-- Contenido del primer LinearLayout -->
    <LinearLayout
        android:id="@+id/ly_firstrow"
        style="@style/LinearLayoutCalc">


        <Button
            android:id="@+id/btn_clear"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_C"
            android:textColor="@color/red" />

        <Button
            android:id="@+id/btn_retro"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_btn_retro" />


        <Button
            android:id="@+id/btn_porc"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_btn_porce" />

        <Button
            android:id="@+id/btn_div"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_btn_div" />


    </LinearLayout>
    <!-- Contenido del segundo LinearLayout -->
    <LinearLayout
        android:id="@+id/ly_secondrow"
        style="@style/LinearLayoutCalc">


        <Button
            android:id="@+id/btn_7"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_btn_8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_btn_9" />

        <Button
            android:id="@+id/btn_times"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_btn_times" />


    </LinearLayout>
    <!-- Contenido del tercero LinearLayout -->
    <LinearLayout
        android:id="@+id/ly_thirdrow"
        style="@style/LinearLayoutCalc">


        <Button
            android:id="@+id/btn_4"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_4" />


        <Button
            android:id="@+id/btn_5"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_btn_5" />


        <Button
            android:id="@+id/btn_6"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_btn_6" />

        <Button
            android:id="@+id/btn_minus"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_btn_minus" />


    </LinearLayout>
    <!-- Contenido del cuarto LinearLayout -->
    <LinearLayout
        android:id="@+id/ly_fourthrow"
        style="@style/LinearLayoutCalc">


        <Button
            android:id="@+id/btn_1"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_1" />


        <Button
            android:id="@+id/btn_2"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_btn_2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_btn_3" />

        <Button
            android:id="@+id/btn_plus"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_btn_plus" />

    </LinearLayout>
    <!-- Contenido del quinto LinearLayout -->
    <LinearLayout
        android:id="@+id/ly_fithrow"
        style="@style/LinearLayoutCalc">

        <Button
            android:id="@+id/btn0"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_btn_0" />

        <Button
            android:id="@+id/btn_coma"
            style="@style/ButtonCalcSmall"
            android:text="@string/calc_btn_coma" />

        <Button
            android:id="@+id/btn_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="17"
            android:background="@drawable/style_button"
            android:text="@string/calc_btn_equal"
            android:textSize="@dimen/head" />


    </LinearLayout>
</LinearLayout>
