<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorPrimary"
    android:orientation="vertical"
    tools:context=".CreateProfileActivity">

    <TextView
        android:id="@+id/tv_createprofiletitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/create_your_account"
        android:textAlignment="center"
        android:textColor="?android:textColor"
        android:textSize="@dimen/head"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_profileimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_createprofiletitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/chooseimage"
        android:textAlignment="center"
        android:textSize="@dimen/common"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/frameImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_profileimg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:backgroundTint="@color/lightYellow"
            app:cardCornerRadius="150dp">
            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="@string/selectphoto"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/person" />
        </androidx.cardview.widget.CardView>

        <!-- Agregamos el CardView para la cÃ¡mara -->
        <androidx.cardview.widget.CardView
            android:id="@+id/imgIconcameraprofile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="230dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="?android:state_pressed"
            android:contentDescription="@string/selectphoto"
            app:cardCornerRadius="150dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:contentDescription="@string/selectphoto"
                app:srcCompat="@drawable/ic_menu_camera" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/required"
        android:textSize="@dimen/extracommon"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/frameImage"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_nameprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/et_nameprofile"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_nameprofile"
            style="@style/InputFieldLarge"
            android:layout_marginTop="10dp"
            android:hint="@string/requiredname"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_usernameprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/et_usernameprofile"
        app:layout_constraintTop_toBottomOf="@id/til_nameprofile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_usernameprofile"
            style="@style/InputFieldLarge"
            android:layout_marginTop="10dp"
            android:hint="@string/requiredname"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_text_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/et_usernameprofile"
        app:layout_constraintTop_toBottomOf="@id/til_usernameprofile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_password"
            style="@style/InputFieldLarge"
            android:layout_marginTop="10dp"
            android:hint="@string/requiredname"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_repeatpassprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/et_usernameprofile"
        app:layout_constraintTop_toBottomOf="@id/til_text_pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_repeatpassword"
            style="@style/InputFieldLarge"
            android:layout_marginTop="10dp"
            android:hint="@string/requiredname"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_createAccounts"
        style="@style/ButtonLarge"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="@string/createaccounts"
        android:contentDescription="@string/createaccounts"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/til_repeatpassprofile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_backtoOnBoarding"
        style="@style/ButtonLarge"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/backbutton"
        android:text="@string/backbutton"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btn_createAccounts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
