<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CuentaAppAndroid" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/lightOrange</item>
        <item name="android:previewImage">@color/orange</item>
        <item name="android:colorPrimaryDark">@color/orange</item>
        <item name="android:colorSecondary">@color/lightYellow</item>
        <item name="android:colorAccent">@color/greenPistacho</item>
        <item name="android:state_pressed">@color/darkGreenPistacho</item>
        <item name="android:state_enabled">@color/lightYellow</item>
        <item name="android:state_empty">@color/lightGrey</item>
        <item name="android:textColor">@color/darkBrown</item>
    </style>


    <style name="RadioButtonStyle">
        <item name="android:textColor">@color/lightYellow</item>
        <item name="android:textColorHighlight">@color/orange</item>
        <item name="android:buttonTint">@color/orange</item>
    </style>


    //Personalizacion del DatePickerDialog
    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/darkGreenPistacho</item>
        <item name="android:colorPrimary">@color/lightOrange</item>
        <item name="android:colorPrimaryDark">@color/orange</item>
        <item name="android:colorAccent">@color/greenPistacho</item>
    </style>


    <style name="CustomSpinner">
        <item name="android:background">@color/lightOrange</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/darkBrown</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>