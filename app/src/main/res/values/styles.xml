<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Estilos de calculadora-->
    <style name="TextViewCalc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:colorSecondary</item>

        <item name="android:gravity">center_vertical|end</item>
        <item name="android:padding">@dimen/padding10</item>
    </style>

    <style name="LinearLayoutCalc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ButtonCalcBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">25</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/style_button</item>
    </style>

    <style name="ButtonCalcSmall" parent="ButtonCalcBase">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">@dimen/head</item>
    </style>

    <style name="ButtonCalcSmallLand" parent="ButtonCalcBase">
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">@dimen/common</item>
    </style>

    <!--Estilos de los campos de entrada-->

    <style name="InputFieldBase">
        <item name="android:layout_height">@dimen/box</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/style_editetx</item>
    </style>

    <style name="InputFieldLarge" parent="InputFieldBase">
        <item name="android:layout_width">360dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="InputFieldMedium" parent="InputFieldBase">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <!--Estilos de los botones-->

    <style name="ButtonStyle">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:background">@drawable/style_button</item>
    </style>

    <!--Estilo de informacion de usuario-->

    <style name="infoMainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="infoimageView">
        <item name="android:layout_width">@dimen/icon32</item>
        <item name="android:layout_height">@dimen/icon32</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="infoSecondaryLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="textViewHead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/extracommon</item>
    </style>
    <style name="infoTerciaryLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">start|end</item>
    </style>
    <style name="editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/style_editetx</item>
        <item name="android:gravity">start</item>
        <item name="android:state_enabled">false</item>
        <item name="android:textSize">@dimen/common</item>
        <item name="android:inputType">none</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

   <style name="imgPencil">
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:textStyle">bold</item>
       <item name="android:layout_marginRight">20dp</item>
       <item name="android:src">@drawable/edit_24</item>
       <item name="android:visibility">gone</item>
   </style>


</resources>