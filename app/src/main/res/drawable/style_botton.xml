<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1sp" android:color="?android:state_pressed" />
            <padding android:bottom="10sp" android:left="10sp" android:right="10sp" android:top="10sp" />
            <corners android:radius="10dp" />
            <solid android:color="?android:state_pressed" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="1sp" android:color="?android:colorAccent" />
            <padding android:bottom="10sp" android:left="10sp" android:right="10sp" android:top="10sp" />
            <corners android:radius="10dp" />
            <solid android:color="?android:colorAccent" />
        </shape>
    </item>



</selector>