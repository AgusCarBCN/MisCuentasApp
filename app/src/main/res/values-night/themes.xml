<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.CuentaAppAndroid" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/darkBrown</item>
        <item name="colorPrimaryVariant">@color/lightYellow</item>
        <item name="android:previewImage">@color/black</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="android:colorSecondary">@color/dark</item>
        <item name="android:colorAccent">@color/orange</item>
        <item name="android:textColorLink">@color/yellow</item>
        <item name="android:state_pressed">@color/darkOrange</item>
        <item name="android:state_enabled">@color/grey3</item>
        <item name="android:state_empty">@color/greyBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorSurface">@color/grey3</item>
        <item name="colorOnSurface">@color/white</item>
    </style>



    <style name="RadioButtonStyle">
        <item name="android:textColor">@color/lightYellow</item>
        <item name="android:textColorHighlight">@color/orange</item>
        <item name="android:buttonTint">@color/orange</item>
    </style>


    //Personalizacion del DatePickerDialog
    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/darkOrange</item>
        <item name="android:colorPrimary">@color/greyBlue</item>
        <item name="android:colorPrimaryDark">@color/orange</item>
        <item name="android:colorAccent">@color/orange</item>
        <item name="android:windowBackground">@color/grey3</item>
    </style>


    <style name="CustomSpinner">
        <item name="android:background">@color/orange</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog_Background" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">@color/grey2</item>
        <item name="android:buttonTint">@color/orange</item>

    </style>
</resources>